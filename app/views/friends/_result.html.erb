<% if params[:action] == 'search' %>
    <div class="results-block">
        <%= bootstrap_flash %>
    </div>
<% end %>
<% if @users %>
    <div class="well results-block col-md-8" id="friend-lookup-results">
        <table class="search-results-table col-md-12">
            <tbody>
                <% @users.each do |user| %>
                    <tr>
                        <td><strong>Name: </strong><%= user.get_full_name %></td>
                        <td><strong>Email: </strong><%= user.email %></td>
                        <td><%= link_to  "View Profile", "#", class: "btn btn-xs btn-primary" %>
                            <%= link_to  "Add as a friend", add_friend_path(user: current_user, friend: user), class: "btn btn-xs btn-primary", method: :post %>
                        </td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
<% end %>